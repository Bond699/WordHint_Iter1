<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    tools:context=".MainMenuActivity" >

    <ImageView
        android:id="@+id/main_menu_logo"
        android:layout_width="0dp"
        android:layout_height="171dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_menu_logo" />

    <TextView
        android:id="@+id/main_menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/hug_me_tight"
        android:text="@string/compound_word_game"
        android:textColor="@color/main_menu_compound"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_logo" />

    <TextView
        android:id="@+id/main_menu_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/main_menu_level"
        android:fontFamily="@font/hug_me_tight"
        android:onClick="onClickLevel"
        android:padding="8dp"
        android:soundEffectsEnabled="false"
        android:text="@string/level"
        android:textAlignment="center"
        android:textColor="@color/white_letter"
        android:textSize="50sp"

        app:layout_constraintTop_toBottomOf="@+id/main_menu_sound" />

    <TextView
        android:id="@+id/main_menu_sound"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="72dp"
        android:background="@color/main_menu_level"
        android:fontFamily="@font/hug_me_tight"
        android:onClick="onClickSound"
        android:padding="8dp"
        android:soundEffectsEnabled="false"
        android:text="@string/sound"
        android:textAlignment="center"
        android:textColor="@color/white_letter"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_slogan" />

    <TextView
        android:id="@+id/main_menu_play"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:background="@color/main_menu_play"
        android:fontFamily="@font/hug_me_tight"
        android:onClick="onClickPlay"
        android:padding="8dp"
        android:soundEffectsEnabled="false"
        android:text="@string/play"
        android:textAlignment="center"
        android:textColor="@color/white_letter"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_level"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>